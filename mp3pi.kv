
#:import sla kivy.adapters.simplelistadapter
#:import label kivy.uix.label
#:import ListItemButton kivy.uix.listview.ListItemButton
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import Factory kivy.factory.Factory

<ListItemButtonTitle@ListItemButton>:
#  selected_color:   [24.0, 1.0, 0.39, 0.6]
#  deselected_color: [1.0, 1.0, 1.0, 0.0]
  font_size: 20
#  size_hint: None, None
  size_hint_y: None
  height: 40
  line_height: 1

<Mp3PiAppLayout>:
  name: 'Testueberschrift'
  fullscreen: True
  
  search_results: search_results_list

  TabbedPanel:
    id: tp
    do_default_tab: False

    TabbedPanelItem:
      text: 'Player'
      BoxLayout:
        orientation: 'vertical'
        BoxLayout:
          Image:
            id: imageid
            #size_hint: None, None
            size_hint_x: .4
            source: 'hr-info.png' 
            orientation: 'horizontal'
          ListView:
            id: search_results_list
#            height: 50 
#            size_hint_y: None
#            size_hint: 0.9, 0.9
            adapter:
              ListAdapter(data=[],
              cls=Factory.ListItemButtonTitle)
        FloatLayout:
          Button:
            text: '1'
          Slider:
            id: volume_slider
            pos_hint: {'x':.45, 'y': 0}
            width: '48dp'
            orientation: 'vertical'
            on_value: root.change_volume(self.value)

    TabbedPanelItem:
      text: 'Settings'

      GridLayout:

        cols: 3
        spacing: '8dp'
        size_hint: .5, None
        height: self.minimum_height

        Label:
          text: 'Checkbox'

        CheckBox:
          size_hint_y: None
          height: '48dp'

        CheckBox:
          size_hint_y: None
          height: '48dp'

        Label:
          text: 'CheckBox with group'

        CheckBox:
          size_hint_y: None
          height: '48dp'
          group: 'g2'

        CheckBox:
          size_hint_y: None
          height: '48dp'
          group: 'g2'
