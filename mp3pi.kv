<ListItemButtonTitle@ListItemButton>:
#  selected_color:   [24.0, 1.0, 0.39, 0.6]
#  deselected_color: [1.0, 1.0, 1.0, 0.0]
  font_size: 30
#  size_hint: None, None
  size_hint_y: None
  height: 60
  line_height: 1

<Mp3PiAppLayout>:
  name: 'Testueberschrift'
  fullscreen: True
  
  search_results: search_results_list

  TabbedPanel:
    id: tp
    do_default_tab: False

    TabbedPanelItem:
      text: 'Player'
      BoxLayout:
        orientation: 'vertical'
        BoxLayout:
          BoxLayout:
            orientation: 'vertical'
            size_hint_x: .4
#            canvas:
#              Color:
#                rgba: 1, 0, 0, .5
#              Rectangle:
#                pos: self.pos
#                size: self.size
            AsyncImage: # channel icon
              id: imageid
              #size_hint: None, None
              size_hint_x: 1
              size_hint_y: 1
              anchor_y: 'top'
              allow_stretch: True
#              canvas:
#                Color:
#                  rgba: 0, 1, 0, .5
#                Rectangle:
#                  pos: self.pos
#                  size: self.size
            Label:
              text: 'ICY'
              id: icytags


          ListView:
            id: search_results_list
#            height: 50 
#            size_hint_y: None
#            size_hint: 0.9, 0.9
            adapter:
              ListAdapter(data=[],
              selection_mode='single',
              cls=Factory.ListItemButtonTitle,
              args_converter=root.args_converter
              )


        BoxLayout:
          orientation: 'horizontal'
          height: 160
          size_hint_y: None
          BoxLayout:
            orientation: 'vertical'
            BoxLayout:
              Label:
                text: "text"
                text_size: self.size
                halign: 'left'
                id: icytags
            BoxLayout:
              Button:
                text: '<<'
                bold: True
              Button:
                text: 'Play/Pause'
                bold: True
                on_release: root.pause()
              Button:
                text: '>>'
                bold: True
            
            
          BoxLayout:
            size_hint_x: .08
            Slider:
              size_hint_x: .1
              id: volume_slider
              pos_hint: {'x':.90, 'y': 0}
              #width: '48dp'
              orientation: 'vertical'
              on_value: root.change_volume(self.value)

    TabbedPanelItem:
      text: 'Settings'

      GridLayout:

        cols: 3
        spacing: '8dp'
        size_hint: .5, None
        height: self.minimum_height

        Label:
          text: 'Checkbox'

        CheckBox:
          size_hint_y: None
          height: '48dp'

        CheckBox:
          size_hint_y: None
          height: '48dp'

        Label:
          text: 'CheckBox with group'

        CheckBox:
          size_hint_y: None
          height: '48dp'
          group: 'g2'

        CheckBox:
          size_hint_y: None
          height: '48dp'
          group: 'g2'

