
#:import sla kivy.adapters.simplelistadapter
#:import label kivy.uix.label
#:import ListItemButton kivy.uix.listview.ListItemButton
#:import ListAdapter kivy.adapters.listadapter.ListAdapter

<Mp3PiAppLayout>:
  name: 'Testueberschrift'
  fullscreen: True
  
  search_results: search_results_list

  TabbedPanel:
    id: tp
    do_default_tab: False

    TabbedPanelItem:
      text: 'Player'
      BoxLayout:
        orientation: 'vertical'
        BoxLayout:
          Image:
            id: imageid
            size_hint: None, None
            source: 'hr-info.png' 
            orientation: 'horizontal'
          ListView:
            id: search_results_list
            adapter:
              ListAdapter(data=[], cls=ListItemButton)
        FloatLayout:
          Button:
            text: '1'
          Slider:
            pos_hint: {'x':.45, 'y': 0}
            width: '48dp'
            orientation: 'vertical'
            on_value: root.change_volume(self.value)

    TabbedPanelItem:
      text: 'Settings'

      GridLayout:

        cols: 3
        spacing: '8dp'
        size_hint: .5, None
        height: self.minimum_height

        Label:
          text: 'Checkbox'

        CheckBox:
          size_hint_y: None
          height: '48dp'

        CheckBox:
          size_hint_y: None
          height: '48dp'

        Label:
          text: 'CheckBox with group'

        CheckBox:
          size_hint_y: None
          height: '48dp'
          group: 'g2'

        CheckBox:
          size_hint_y: None
          height: '48dp'
          group: 'g2'
