<ListItemButtonTitle@ListItemButton>:
#  selected_color:   [24.0, 1.0, 0.39, 0.6]
#  deselected_color: [1.0, 1.0, 1.0, 0.0]
  font_size: 30
#  size_hint: None, None
  size_hint_y: None
  height: 60
  line_height: 1

<WlanSymbol>:
  id: wlansymbol
  canvas:
    Color:
      rgba: 1, 1, 1, .5
    Line:
      width: 2
      circle: (30, 220, 30, 50, -50)
    Color:
      rgba: 1, 1, 1, .5
    Line:
      width: 2
      circle: (30, 220, 20, 50, -50)
    Color:
      rgba: 1, 1, 1, 1
    Line:
      width: 2
      circle: (30, 220, 10, 50, -50)
    Color:
      rgba: 1, 1, 1, .1
    Line:
      width: 2 
      circle: (30, 220, 1)


<Mp3PiAppLayout>:
  name: 'Testueberschrift'
  fullscreen: True
  
  search_results: search_results_list

  TabbedPanel:
    id: tp
    do_default_tab: False

    TabbedPanelItem:
      text: 'Player'
      BoxLayout:
        orientation: 'vertical'
        BoxLayout:
          BoxLayout:
            orientation: 'vertical'
            size_hint_x: .4
#            canvas:
#              Color:
#                rgba: 1, 0, 0, .5
#              Rectangle:
#                pos: self.pos
#                size: self.size
            AsyncImage: # channel icon
              id: imageid
              #size_hint: None, None
              size_hint_x: 1
              size_hint_y: 1
              anchor_y: 'top'
              allow_stretch: True
#              canvas:
#                Color:
#                  rgba: 0, 1, 0, .5
#                Rectangle:
#                  pos: self.pos
#                  size: self.size

#            WlanSymbol:

            Label:
              text: ''
              text_size: self.size
              halign: 'left'
              id: wlanstatus

              canvas:
                Color:
                  rgba: 1, 1, 1, .5
                Line:
                  width: 2
                  circle: (30, 220, 30, 50, -50)
                Color:
                  rgba: 1, 1, 1, .5
                Line:
                  width: 2
                  circle: (30, 220, 20, 50, -50)
                Color:
                  rgba: 1, 1, 1, 1
                Line:
                  width: 2
                  circle: (30, 220, 10, 50, -50)
                Color:
                  rgba: 1, 1, 1, 1
                Line:
                  width: 2 
                  circle: (30, 220, 1)
        
      
          ListView:
            id: search_results_list
#            height: 50 
#            size_hint_y: None
#            size_hint: 0.9, 0.9
            adapter:
              ListAdapter(data=[],
              selection_mode='single',
              cls=Factory.ListItemButtonTitle,
              args_converter=root.args_converter
              )


        BoxLayout:
          orientation: 'horizontal'
          height: 160
          size_hint_y: None
          BoxLayout:
            orientation: 'vertical'
            BoxLayout:
              Label:
                text: ""
                text_size: self.size
                halign: 'left'
                id: icytags
            BoxLayout:
              popup: popup.__self__
              id: bl
              Popup:
                id: popup
                title: 'Shutdown/Reboot'
                size_hint: .6, .5
                on_parent:
                  if self.parent == bl: self.parent.remove_widget(self)
                BoxLayout:
                  Button:
                    size_hint_y: None
                    width: 100
                    text: "Poweroff"
                    on_release: root.poweroff()
                    on_release: popup.dismiss()
                  Button:
                    size_hint_y: None
                    width: 100
                    text: "Reboot"
                    on_release: root.reboot()
                    on_release: popup.dismiss()

              Button: 
                size_hint_x: None
                width: 100
                on_release: self.parent.popup.open()
                canvas:
                  Color:
                    rgba: 1, 1, 1, 1
                  Line:
                    width: 3
                    circle: (50, 40, 20, 30, 330)
                  Line:
                    width: 3
                    points: 50, 45, 50, 65
              Button:
                text: '<<'
                bold: True
                on_release: root.prev()
              Button:
                text: 'Play/Pause'
                bold: True
                on_release: root.pause()
              Button:
                text: '>>'
                bold: True
                on_release: root.next()
            
            
          BoxLayout:
            size_hint_x: .08
            Slider:
              size_hint_x: .1
              id: volume_slider
              pos_hint: {'x':.90, 'y': 0}
              #width: '48dp'
              orientation: 'vertical'
              on_value: root.change_volume(self.value)

    TabbedPanelItem:
      text: 'Settings'

      GridLayout:

        cols: 3
        spacing: '8dp'
        size_hint: .5, None
        height: self.minimum_height

        Label:
          text: 'Checkbox'

        CheckBox:
          size_hint_y: None
          height: '48dp'

        CheckBox:
          size_hint_y: None
          height: '48dp'

        Label:
          text: 'CheckBox with group'

        CheckBox:
          size_hint_y: None
          height: '48dp'
          group: 'g2'

        CheckBox:
          size_hint_y: None
          height: '48dp'
          group: 'g2'

